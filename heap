#include<iostream>
using namespace std;
class heap{
    int n;
    int *minheap,*maxheap;
    public:
    void get();
    void dispmin(){
        cout<<"minimum marks are "<<minheap[0]<<endl;
    }
    void dispmax(){
        cout<<"maximum marks are "<<maxheap[0]<<endl;
    }
    void upAdjust(bool,int);
};
void heap::get(){
    cout<<"Enter the number of students";
    cin>>n;
    minheap= new int[n];
    maxheap= new int[n];
    int k;
    cout<<"enter the marks "<<endl;
    for(int i=0; i<n; i++)
    {
        cin>>k;
        minheap[i]=k;
        upAdjust(0,i);
        maxheap[i]=k;
        upAdjust(1,i);
        
    }
}
void heap::upAdjust(bool m, int l){
    int s;
    if(!m){
        while(minheap[(l-1)/2]>minheap[l]){
            s=minheap[l];
            minheap[l]=minheap[(l-1)/2];
            minheap[(l-1)/2]=s;
            l=(l-1)/2;
            if(l==-1)
                break;
        }
    }
    else{
        while(maxheap[(l-1)/2]<maxheap[l]){
            s=maxheap[l];
            maxheap[l]=maxheap[(l-1)/2];
            maxheap[(l-1)/2]=s;
            l=(l-1)/2;
            if(l==-1)
                break;
    }
}
}

int main(){
    heap h;
    h.get();
    h.dispmax();
    h.dispmin();
    return(0);
}
